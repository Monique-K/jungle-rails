<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>

  <h1>Average Rating: <% @average_rating.times do %><span class="fa fa-star checked"></span><% end %></h1>
  <% if current_user %>
  <div>
   <%= form_for [@product, @review] do |form| %>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :rating %>
          <%= form.select :rating, [1, 2, 3, 4, 5], class: 'form-control' %>
        </div>

        <%= form.submit 'Submit Review', class: 'btn btn-primary' %>
  <% end %>

  </div>

<br/>
  <div >
    <table>
    <thead>
      <tr>
      <th>Reviews</th>
      <th>Rating</th>
      </tr>
    </thead>
    <tbody>
    <% @product.reviews.reverse.each do |review| %>
    <tr>
      <td><%= review.description %></td>
      <td><% review.rating.times do %><span class="fa fa-star checked"></span><% end %></td>
      <td>
        <% if review.user.id == current_user.id %>
        <%= link_to "Delete", [@product, review], class: "btn btn-danger", method: :delete  %>
        <br />
        <br />
        <% end %>
      </td>
    </tr>
       <% end %>
    <% end %>
  </tbody>
</table>
  </div>

</section>
